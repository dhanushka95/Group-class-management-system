<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="9dp"
        android:text="Test number : "
        android:textSize="20dp"
        android:textColor="#f9f9fd"
        />

    <EditText
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:hint="test number"
        android:textColor="#f9f3f9"
        android:textColorHint="#f9f3f9"
        android:inputType="number"
        />

    <ListView
        android:id="@+id/test_student_listview"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="0dp"
        android:divider="#f5fcf5"
        android:dividerHeight="2sp">

    </ListView>

    <Button
        android:id="@+id/btnMark_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/test_student_listview"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#19ba07"
        android:text="Add mark"
        android:textColor="#ffffff" />

</RelativeLayout>