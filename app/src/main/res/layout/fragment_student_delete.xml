<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group name"
            android:textColor="#1f201f"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/GroupName_student_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="group name"
            android:inputType="number"
            android:textColor="#0232b4"
            android:textAlignment="center"
            android:paddingBottom="10dp"/>
     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student name"
            android:textColor="#1f201f"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="5dp"
            />

        <EditText
            android:id="@+id/studentName_student_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="name"
            android:textColor="#0232b4"
            android:textAlignment="center"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textColor="#1f201f"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/studentPhoneNumber_student_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone number"
            android:textColor="#0232b4"
            android:inputType="phone"
            android:textAlignment="center"
            android:paddingBottom="10dp"/>


        <Button
            android:id="@+id/btnDeleteStudent_student_delete"
            android:text="Delete student"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="72dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#ba0722"
            android:textColor="#ffffff"


            />
    </LinearLayout>
    </ScrollView>

    </RelativeLayout>