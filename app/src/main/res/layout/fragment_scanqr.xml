<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBarcodevalue_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Barcodevalue_scan_qr"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-385dp"
        android:src="@drawable/qrimage" />

    <TextView
        android:id="@+id/Barcodevalue_scan_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:text="Scan Qr"
        android:textSize="5dp" />

    <Button
        android:id="@+id/btnScanQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"

        android:layout_marginBottom="67dp"
        android:backgroundTint="#19ba07"
        android:text="scan qr"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/nextFragment_scan_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="21dp"
        android:backgroundTint="#ba0737"
        android:text="Goto List"
        android:textColor="#ffffff" />


</RelativeLayout>