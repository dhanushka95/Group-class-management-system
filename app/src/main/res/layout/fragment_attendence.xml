<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GroupName_attendence_add"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="0dp"
        android:text="Team name"
        android:textColor="#c21745"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="41dp"
        android:text="Number of day : "
        android:textColor="#17c22b"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/numberofday_attendence_add"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="16dp"
        android:hint="number"
        android:inputType="number"
        android:textColor="#32a305"
        android:textColorHint="#f9f3f9" />

    <ListView
        android:id="@+id/list_Attendence_add_listview"
        android:layout_width="355dp"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="80dp"
        android:divider="#025b02"
        android:dividerHeight="1sp">

    </ListView>

    <Button
        android:id="@+id/btnAttendenceMark_attendence_add"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#ba0719"
        android:text="ok"
        android:textColor="#ffffff" />
</RelativeLayout>